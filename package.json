{
  "name": "@schedule-x/react",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "description": "React components for ScheduleX",
  "keywords": [
    "calendar",
    "event",
    "dark-mode",
    "internationalization",
    "react"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "version": "2.4.2",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rollup -c && npm run build:dts",
    "build:dts": "node scripts/build-declarations.mjs",
    "test": "./node_modules/.bin/cypress run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 5",
    "preview": "vite preview",
    "format": "prettier --write .",
    "build:publish": "npm run build && npm publish"
  },
  "peerDependencies": {
    "@schedule-x/calendar": "^2.3.0",
    "react": "^16.7.0 || ^17 || ^18",
    "react-dom": "^16.7.0 || ^17 || ^18"
  },
  "devDependencies": {
    "@fontsource/open-sans": "^5.0.19",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@schedule-x/calendar-controls": "^2.3.0",
    "@schedule-x/drag-and-drop": "^2.3.0",
    "@schedule-x/e2e-testing": "^2.3.0",
    "@schedule-x/eslint-config": "^2.3.0",
    "@schedule-x/event-modal": "^2.3.0",
    "@schedule-x/events-service": "^2.3.0",
    "@schedule-x/prettier-config": "^2.3.0",
    "@schedule-x/shared": "^2.3.0",
    "@schedule-x/theme-default": "^2.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cypress": "^13.6.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.0",
    "rollup": "^4.9.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "semantic-release": "^24.0.0",
    "typescript": "^5.6.2",
    "vite": "^5.0.8"
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    }
